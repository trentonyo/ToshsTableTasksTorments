{{#unless view}}<a href="/LootItems/view/{{lootId}}">{{/unless}}
    <div class="card loot jsp-loot-light-backgroundColor jsp-loot-light-thickerBorderColor {{#if view}}full static{{/if}}">
        <div class="title animate-background-gradient jsp-global-black-textColor" data-jsp-palette="loot">
            {{lootName}} {{#unless view}}<span class="subtitle nowrap">({{lootValue}} gold)</span>{{/unless}}
        </div>
        <div class="description jsp-quest-dark-textColor">
            {{#if monsterId}}<div class="stats">{{dropQuantity}} Dropped | {{localizeChance dropChance}}</div>{{/if}}
            {{lootDesc}}
        </div>
    </div>
{{#unless view}}</a>{{/unless}}