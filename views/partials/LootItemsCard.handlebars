<!-- {{#unless view}}<a href="/LootItems/view/{{lootId}}">{{/unless}} -->
    <div class="card loot jsp-loot-light-backgroundColor jsp-loot-light-thickerBorderColor {{#if view}}full static{{/if}}" id="LootItems-{{lootId}}">
        <div class="title animate-background-gradient jsp-global-black-textColor" data-jsp-palette="loot" id="LootItems-Name-{{lootId}}">
            {{lootName}} {{#unless view}}<span class="subtitle nowrap">({{lootValue}} gold)</span>{{/unless}}
        </div>
        <div class="description jsp-quest-dark-textColor" id="LootItems-lootDesc-{{lootId}}">
            {{#if monsterId}}<div class="stats">{{dropQuantity}} Dropped | {{localizeChance dropChance}}</div>{{/if}}
            {{lootDesc}}
            {{view}}
            <br>
            <br>
        </div>

        {{#if suppressDetailsButton}}
        {{else if view}}
        {{else}}
            <div class="button_container">
                <button onClick="toggleEditMode(this, {'entity': 'LootItems', 'id': '{{lootId}}'}, true)" id="toggleEdit-LootItems-{{lootId}}">Edit</button>
                <button onClick="updateEntity(this, {'entity': 'LootItems', 'id': '{{lootId}}'} )" id="update-LootItems-{{lootId}}" class="hidden">Submit</button>
                <button onClick="deleteEntity(this, {'entity': 'LootItems', 'id': '{{lootId}}'} )">Delete</button>
            </div>
        {{/if}}

    </div>
<!-- {{#unless view}}</a>{{/unless}} -->