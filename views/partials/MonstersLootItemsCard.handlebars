<div class="card loot jsp-loot-light-backgroundColor jsp-loot-light-thickerBorderColor {{#if view}}full static{{/if}}" id="MonstersLootItems-{{compoundId monsterId lootId}}">
    <div class="title animate-background-gradient jsp-global-black-textColor" data-jsp-palette="monster" id="MonstersLootItems-Name-{{compoundId monsterId lootId}}">
        {{monsterName}}
    </div>
    <div class="description jsp-loot-dark-textColor">
        {{#unless view}}<div class="stats">{{dropQuantity}} Dropped | {{localizeChance dropChance}}</div>{{/unless}}
        {{lootName}}
    </div>

    <br>
    <br>

    <div class="button_container">
        <button onClick="toggleEditMode(this, {'entity': 'MonstersLootItems', 'id': '{{compoundId monsterId lootId}}'}, true)" id="toggleEdit-MonstersLootItems-{{compoundId monsterId lootId}}">Edit</button>
        <button onClick="updateEntity(this, {'entity': 'MonstersLootItems', 'id': '{{compoundId monsterId lootId}}'} )" id="update-MonstersLootItems-{{compoundId monsterId lootId}}" class="hidden">Submit</button>
        <button onClick="deleteEntity(this, {'entity': 'MonstersLootItems', 'id': '{{compoundId monsterId lootId}}'} )">Delete</button>
    </div>
</div>
