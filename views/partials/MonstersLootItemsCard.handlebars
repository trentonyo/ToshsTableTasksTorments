<div class="card loot jsp-loot-light-backgroundColor jsp-loot-light-thickerBorderColor {{#if view}}full static{{/if}}" id="MonstersLootItems-{{compoundId monsterId lootId}}">
    <div class="title animate-background-gradient jsp-global-black-textColor" data-jsp-palette="monster" id="MonstersLootItems-Name-{{compoundId monsterId lootId}}">
        {{monsterName}}
    </div>
    <div class="description jsp-loot-dark-textColor" id="MonstersLootItems-ViewDetails-{{compoundId monsterId lootId}}">
        {{#unless view}}<div class="stats" id="MonstersLootItems-Stats-{{compoundId monsterId lootId}}">{{dropQuantity}} Dropped | {{localizeChance dropChance}}</div>{{/unless}}
        {{lootName}}
    </div>
    <div class="hidden description jsp-ability-dark-textColor" id="MonstersLootItems-EditDetails-{{compoundId monsterId lootId}}">
        <label for="editDropQuantity-{{compoundId monsterId lootId}}">Drop Quantity:</label>
        <input class="editDesc" name="editDropQuantity" id="editDropQuantity-{{compoundId monsterId lootId}}" type="number" min="1" value="{{dropQuantity}}">
        <br>
        <label for="editDropChance-{{compoundId monsterId lootId}}">Drop Chance (decimal):</label>
        <input class="editDesc" name="editDropChance" id="editDropChance-{{compoundId monsterId lootId}}" type="number" max="1" min="0.000001" step="0.000001" value="{{dropChance}}">
    </div>

    <br>
    <br>

    <div class="button_container">
        <button onClick="toggleEditMode(this, {'entity': 'MonstersLootItems', 'id': '{{compoundId monsterId lootId}}'}, true)" id="toggleEdit-MonstersLootItems-{{compoundId monsterId lootId}}">Edit</button>
        <button onClick="updateEntity(this, {'entity': 'MonstersLootItems', 'id': '{{compoundId monsterId lootId}}'} )" id="update-MonstersLootItems-{{compoundId monsterId lootId}}" class="hidden">Submit</button>
        <button onClick="deleteEntity(this, {'entity': 'MonstersLootItems', 'id': '{{compoundId monsterId lootId}}'} )">Delete</button>
    </div>
</div>
