<!-- {{#unless view}}<a href="/Quests/view/{{questId}}" name="quest-redirect-{{questId}}">{{/unless}} -->
<div class="card quest jsp-quest-light-backgroundColor jsp-quest-light-thickerBorderColor {{# if view}}full static{{/if}}" id="Quests-{{questId}}">
    <div class="title animate-background-gradient {{#unless view}}{{#if available}}available{{/if}}{{/unless}} jsp-global-black-textColor" data-jsp-palette="quest" id="Quests-Name-{{questId}}">
        {{questName}} 
    </div>
    <div class="description jsp-quest-dark-textColor" id="Quests-questDesc-{{questId}}">
        {{questDesc}}
    </div>
    <div class="giver jsp-quest-dark-textColor" id="Quests-questGiverId-{{questId}}">
        {{#if questGiverId}}- {{questGiverName}}{{else}}- Unknown{{/if}}
    </div>
<!-- {{#unless view}}</a>{{/unless}} -->
    <div class="button_container">
        <button onClick="toggleEditMode(this, {'entity': 'Quests', 'id': '{{questId}}'}, true)" id="toggleEdit-Quests-{{questId}}">Edit</button>
        <button onClick="updateEntity(this, {'entity': 'Quests', 'id': '{{questId}}'} )" id="update-Quests-{{questId}}" class="hidden">Submit</button>
        <button onClick="deleteEntity(this, {'entity': 'Quests', 'id': '{{questId}}'} )">Delete</button>
    </div>
</div>
